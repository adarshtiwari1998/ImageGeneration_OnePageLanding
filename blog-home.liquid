<div class="blog_sction-home">
  <div class="blog_header" style="text-align:center">
  <h5>Latest from All Our Blogs</h5> 
  <div class="blog_category_links">
    <a href="/blogs/foxx-blog" class="category-link foxx-blog">Foxx Blog</a>
    <a href="/blogs/foxx-podcast" class="category-link foxx-podcast">Foxx Podcast</a>
    <a href="/blogs/foxx-in-news" class="category-link foxx-news">Foxx In News</a>
    <a href="{{settings.home_page_blog_button_link}}" class="view-all-link">View All</a>
  </div>
  </div>
  {% assign home_blog_limit = settings.home_page_blog_limit %}
  {% assign article_count = 0 %}
  
  {% comment %} Create an array to store all articles from all blogs {% endcomment %}
  {% assign all_articles = blogs['foxx-blog'].articles | concat: blogs['foxx-podcast'].articles | concat: blogs['foxx-in-news'].articles %}
  {% assign all_articles = all_articles | sort: 'published_at' | reverse %}

  {% for article in all_articles limit: home_blog_limit %}
  <div class="both_section_block_blog open-house-themed-cards-blog">
    {% if article.image %}
  {% assign image_alt = article.title | escape %}
<p class="home_page_blog_image">{{ article | img_url: '256x256' | img_tag: image_alt, 'article__image' | link_to: article.url }}</p>
{% endif %}

    <div class="blog_title_text_block"   {% unless article.image %} style="width:100%;     padding-left:0px;" {% endunless %}>
      {% comment %} Determine which blog category this article belongs to {% endcomment %}
      {% assign blog_category = '' %}
      {% assign category_class = '' %}
      {% for blog_article in blogs['foxx-blog'].articles %}
        {% if blog_article.id == article.id %}
          {% assign blog_category = 'Foxx Blog' %}
          {% assign category_class = 'foxx-blog' %}
          {% break %}
        {% endif %}
      {% endfor %}
      {% if blog_category == '' %}
        {% for blog_article in blogs['foxx-podcast'].articles %}
          {% if blog_article.id == article.id %}
            {% assign blog_category = 'Foxx Podcast' %}
            {% assign category_class = 'foxx-podcast' %}
            {% break %}
          {% endif %}
        {% endfor %}
      {% endif %}
      {% if blog_category == '' %}
        {% for blog_article in blogs['foxx-in-news'].articles %}
          {% if blog_article.id == article.id %}
            {% assign blog_category = 'Foxx In News' %}
            {% assign category_class = 'foxx-news' %}
            {% break %}
          {% endif %}
        {% endfor %}
      {% endif %}
      
      {% comment %} Display category badge {% endcomment %}
      <div class="blog-category-badge {{ category_class }}">{{ blog_category }}</div>
      
<h1><a href="{{ article.url }}">{{ article.title }}</a></h1>
        <p class="blog-date">
      <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'month_day_year' }}</time>
      {% if settings.blog_author_enable %}
        <span class="meta-sep">&#8226;</span>
        {{ article.author }}
      {% endif %}
      {% comment %} {% if article.tags.size > 0 %}
        <span class="meta-sep">&#8226;</span>
        {% for tag in article.tags %}
          <a href="{{ blog.url }}/blogs/foxx-blog/tagged/{{ tag | handle }}">{{ tag }}</a>{% unless forloop.last %} <span class="meta-sep">&#8226;</span> {% endunless %}
        {% endfor %}
      {% endif %} {% endcomment %}
    </p>

{% if article.excerpt.size > 0 %}
{{ article.excerpt }}
{% else %}
<p>{{ article.content | strip_html | truncate: 250 }}</p>
{% endif %}


<p><a href="{{ article.url }}">{{ 'blogs.article.read_more' | t }} &rarr;</a></p>
  </div>
  </div>
  {% endfor %}

</div>
